---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ImagesRoutes } from '../assets/images/ImagesRoutes';
import { DecorationLod } from '../components';
import { Hero,Concept,SelfIntroduction,AlbumList } from '../sections/index';
const bg = ImagesRoutes.IMG_0168;
import backgroundVideo from "../assets/videos/BG_movie_hibi.mp4"
---

<BaseLayout titlt = "Home Page">
  <video class="section-frame" id="background-video"
  autoplay
  muted
  loop
  playsinline
  preload="auto">
<source src = {backgroundVideo} type = "video/mp4"/></video>
  <Hero/>
  <Concept/>
  <SelfIntroduction/>
  <AlbumList/>
</BaseLayout>



<style lang="scss">
  #background-video{
    position:fixed;
    top: 0;
    left:0;
    opacity:0.5;
    z-index: -1;
  }
</style>